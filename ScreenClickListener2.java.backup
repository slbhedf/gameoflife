package gameoflife;

import java.awt.*;
import java.awt.event.*;

public class ScreenClickListener2 implements MouseListener{
	private Grid grid;
	private MyGameBoard board;
	private Component component;

	public ScreenClickListener2(MyGameBoard board, Grid grid, Component component) {
		this.board = board;
		this.grid = grid;
		this.component = component;
	}

	@Override
	public void mouseClicked(MouseEvent e) {
		int mouseX = e.getX();
		int mouseY = e.getY();
		int unitLength = this.grid.getUnitLength();

		int i = (mouseX / unitLength);
		int j = (mouseY / unitLength);
		if(this.board.onTheBoard(i, j)) {
			if(this.board.getBoard()[i][j]) {
				this.board.turnToDead(i, j);
			} else {
				this.board.turnToLiving(i, j);
			}
			System.out.println("(" + mouseX+","+mouseY + ") clicked, "  
					+ "board[" + i + "][" + j + "] is " + this.board.isAlive(i, j));
		}
		this.component.repaint();
		
	}

	public void mouseEntered(MouseEvent e){	
	}

	public void mouseExited(MouseEvent e) {
	}

	public void mousePressed(MouseEvent e) {
	}

	public void mouseReleased(MouseEvent e) {
	}
}
